<h1><%= title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <% if (error.msg !== "Invalid value") { %>
                <li><%= error.msg %></li>
            <% } %>
        <% }) %>
    </ul>
<% } %>
<div class="form-display">
<form method="post" action="/inv/add-classification">
<fieldset>
    <p>Name must be alphabetic characters only</p>
<label>New Classification*<input type="text" name="classification_name" id="classification_name"  pattern="^[A-Za-z]+$" title="Only contains alphabetic characters, and no spaces">
</label>
<button type="submit">Register</button>
</fieldset>
</form>
</div>
